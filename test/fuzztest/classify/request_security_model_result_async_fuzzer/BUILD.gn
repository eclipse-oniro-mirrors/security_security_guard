import("//base/security/security_guard/security_guard.gni")
import("//build/config/features.gni")
import("//build/test.gni")

module_output_path = "security_guard/classify"

ohos_fuzztest("RequestSecurityModelResultAsyncFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "${sg_root_dir}/test/fuzztest/classify/request_security_model_result_async_fuzzer"

  include_dirs = [
    "${sg_root_dir}/frameworks/common/constants/include",
    "${sg_root_dir}/frameworks/common/log/include",
    "${sg_root_dir}/services/risk_classify/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  cflags_cc = [ "-DHILOG_ENABLE" ]

  sources = [ "request_security_model_result_async_fuzzer.cpp" ]

  deps = [
    "${sg_root_dir}/services/risk_classify:sg_classify_service",
  ]

  external_deps = [
    "security_guard:libsg_classify_sdk",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
    "c_utils:utils",
  ]
}
